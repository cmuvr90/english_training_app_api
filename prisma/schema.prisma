datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model Tasks {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  title     String
  body      String
  createdAt DateTime @default(now())
}
